<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lv_tv_user_id_title"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/lv_tv_user_id_title" />

    <TextView
        android:id="@+id/lv_tv_user_id"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@id/lv_tv_user_id_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/lv_tv_username_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/lv_tv_user_id_title"
        android:text="@string/lv_tv_username_title" />

    <TextView
        android:id="@+id/lv_tv_username"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/lv_tv_username_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:layout_toEndOf="@id/lv_tv_user_id"
        android:background="@android:color/white"
        android:textAlignment="viewStart" />

</RelativeLayout>

