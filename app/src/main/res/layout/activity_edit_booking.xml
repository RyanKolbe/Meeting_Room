<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#FBBFDA"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RoomActivities.EditBookingActivity">

    <TextView
        android:id="@+id/tv_edit_booking"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/tv_edit_booking"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cb_edit_booking_user_id"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/tv_edit_booking"
        android:layout_marginTop="15dp"
        android:background="@android:color/white" />

    <CheckBox
        android:id="@+id/cb_edit_booking_room_id"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/cb_edit_booking_user_id"
        android:layout_marginTop="15dp"
        android:background="@android:color/white" />

    <CalendarView
        android:id="@+id/cv_edit_booking_meeting_date"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/cb_edit_booking_room_id"
        android:layout_marginTop="15dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tv_edit_booking_start_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_edit_booking_meeting_date"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:text="@string/tv_edit_booking_start_time_title" />

    <TimePicker
        android:id="@+id/tp_edit_booking_start_time"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_edit_booking_start_time_title"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_edit_booking_end_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_edit_booking_meeting_date"
        android:layout_marginTop="15dp"
        android:layout_marginStart="190dp"
        android:background="@android:color/white"
        android:text="@string/tv_edit_booking_end_time_title" />

    <TimePicker
        android:id="@+id/tp_edit_booking_end_time"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginStart="190dp"
        android:layout_below="@+id/tv_edit_booking_start_time_title"
        android:layout_marginTop="15dp" />

</RelativeLayout>